@model IEnumerable<DoAnCoSo.Data.Lichhoc>

@{
    ViewData["Title"] = "Lịch học";
}

<h1>Lịch học</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tuần</th>
            <th scope="col">Ca học</th>
            <th scope="col">Ngày học</th>
            <th scope="col">Ghi chú</th>
            <th scope="col">Học viên</th>
            <th scope="col">Lớp</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tuan)</td>
                <td>@Html.DisplayFor(modelItem => item.Cahoc)</td>
                <td>@Html.DisplayFor(modelItem => item.Ngayhoc)</td>
                <td>@Html.DisplayFor(modelItem => item.Ghichu)</td>
                <td>@Html.DisplayFor(modelItem => item.MahvNavigation.Mahv)</td>
                <td>@Html.DisplayFor(modelItem => item.MalopNavigation.Malop)</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Malh">Chi tiết</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Malh">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Malh">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
