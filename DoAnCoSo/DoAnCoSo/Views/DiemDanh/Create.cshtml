@model DoAnCoSo.Data.Phieudiemdanh

@{
    ViewData["Title"] = "Tạo Phiếu Điểm Danh Mới";
}

<h2>Tạo Phiếu Điểm Danh Mới</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Magv" class="control-label">Giảng viên</label>
        <select asp-for="Magv" class="form-control" asp-items="@(new SelectList(ViewBag.Giangviens, "Magv", "Tengv"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Malh" class="control-label">Lịch học</label>
        <select asp-for="Malh" class="form-control" asp-items="@(new SelectList(ViewBag.Lichhocs, "Malh", "Tuan"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Mahv" class="control-label">Học viên</label>
        <select asp-for="Mahv" class="form-control" asp-items="@(new SelectList(ViewBag.Hocviens, "Mahv", "Tenhv"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Trangthai" class="control-label">Trạng thái</label>
        <input asp-for="Trangthai" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ghichu" class="control-label">Ghi chú</label>
        <input asp-for="Ghichu" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Tạo" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Quay lại danh sách</a>
