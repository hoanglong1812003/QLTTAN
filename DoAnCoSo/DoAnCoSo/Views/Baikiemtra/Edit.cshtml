@model DoAnCoSo.Data.Baikiemtra

@{
    ViewData["Title"] = "Chỉnh sửa bài kiểm tra";
}

<h1>Chỉnh sửa Bài kiểm tra</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Mabaikt" />

            <div class="form-group">
                <label asp-for="Magv">Mã giảng viên:</label>
                <select asp-for="Magv" class="form-control" asp-items="ViewBag.Magv"></select>
            </div>

            <div class="form-group">
                <label asp-for="Mahv">Mã học viên:</label>
                <select asp-for="Mahv" class="form-control" asp-items="ViewBag.Mahv"></select>
            </div>

            <div class="form-group">
                <label asp-for="Tenbaikt">Tên bài kiểm tra:</label>
                <input asp-for="Tenbaikt" class="form-control" />
                <span asp-validation-for="Tenbaikt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ngaykt">Ngày kiểm tra:</label>
                <input asp-for="Ngaykt" type="date" class="form-control" />
                <span asp-validation-for="Ngaykt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tgbatdau">Thời gian bắt đầu:</label>
                <input asp-for="Tgbatdau" type="time" class="form-control" />
                <span asp-validation-for="Tgbatdau" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tgketthuc">Thời gian kết thúc:</label>
                <input asp-for="Tgketthuc" type="time" class="form-control" />
                <span asp-validation-for="Tgketthuc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ketqua">Kết quả:</label>
                <input asp-for="Ketqua" class="form-control" />
                <span asp-validation-for="Ketqua" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Danhgia">Đánh giá:</label>
                <input asp-for="Danhgia" class="form-control" />
                <span asp-validation-for="Danhgia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FilePath">File đính kèm:</label>
                <input type="file" name="file" class="form-control-file" />
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
