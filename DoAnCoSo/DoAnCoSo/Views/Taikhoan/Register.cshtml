@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Register</h2>
        <form asp-action="Register" method="post" class="mt-4">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" class="form-control" id="username" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password" required />
            </div>
            <div class="form-group">
                <label for="loaiuser">User Type</label>
                <select name="loaiuser" class="form-control" id="loaiuser" required>
                    <option value="Admin">Admin</option>
                    <option value="Nhanvien">Nhân viên</option>
                    <option value="Giangvien">Giảng viên</option>
                    <option value="Hocvien">Học viên</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
            <div class="text-center mt-3">
                <p>Already have an account? <a href="/Account/Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>
